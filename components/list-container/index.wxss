.list-container{
  padding:30rpx 0 60rpx;
}
.list-container .loading{
  text-align: center;
}
.no-data{
  display: block;
  margin-top: 160rpx;
}
.bottom-tip{
  text-align: center;
  font-size: 24rpx;
  padding: 30rpx 0;
}
.finished{
  color: #888;
  display: flex;
  justify-content: center;
  align-items: center;
}
.finished:before,
.finished:after{
  content: '';
  display: block;
  background: #ddd;
  height: 1px;
  width: 20%;
  margin: 0 30rpx;
}