@import '/common/wxss/topbg.wxss';
.top{
  height: 100%;
}
.top .flex-group{
  height: 100%;
}
.avatar{
  width:120rpx;
  height:120rpx;
  margin-left: 30rpx;
}
.avatar .image{
  border:2rpx solid rgba(255,255,255,1);
}
.details{
  flex:1;
  padding: 0 30rpx;
}
.placeholder{
  color: #fff;
  display: inline;
  background: none;
  border: none;
}
.placeholder:after{
  border: none;
}
.nickname{
  font-size:36rpx;
  font-weight:600;
  color:rgba(255,255,255,1);
}
.nickname text{
  vertical-align: middle;
}
.desc{
  font-size:24rpx;
  font-weight:600;
  color:rgba(255,255,255,.6);
  line-height:34rpx;
  margin-top: 15rpx;
}
.identity{
  display: inline-block;
  font-size: 20rpx;
  border-radius: 40rpx;
  padding: 6rpx 10rpx;
  margin-left: 10rpx;
}
.tag{
  width:180rpx;
  height: 80rpx;
  border-radius: 40px 0 0 40px;
  font-size: 24rpx;
  color: #fff;
}
.tag .nav{
  width: 100%;
  height: 100%;
  line-height: 80rpx;
  padding-left: 40rpx;
}
.entry{
  background: #fff;
}
.icon{
  width: 48rpx;
  height: 48rpx;
  margin: 30rpx;
}
.content{
  border-bottom: 1rpx solid #ddd;
  flex: 1;
  padding-right: 30rpx;
}
.entry:last-child .content{
  border-bottom: none;
}
.label{
  padding: 40rpx 30rpx 40rpx 0;
  font-size:28rpx;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:40rpx;
  flex: 1;
}
.no-data{
  margin-top: 150rpx;
}