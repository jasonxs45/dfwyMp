.member{
  background: #fff;
}
.avatar{
  width: 80rpx !important;
  height: 80rpx !important;
  margin: 20rpx 30rpx 20rpx 0;
}
.tag{
  display: inline-block;
  font-size: 20rpx;
  border-radius: 40rpx;
  padding: 6rpx 10rpx;
  vertical-align: middle;
  margin-left: 10rpx;
  color:#fff;
}
.mark{
  width: 10rpx;
  background: #ccc;
}
.name{
  font-size:36rpx;
  font-weight:600;
  color:rgba(51,51,51,1);
  vertical-align: middle;
}
.member-info{
  padding: 30rpx;
  flex: 1;
}
.tag-nav{
  width:140rpx;
  height:60rpx;
  border-radius:8rpx;
  border:2rpx solid rgba(170,170,170,1);
  line-height: 60rpx;
  font-size:24rpx;
  font-weight:bold;
  color:rgba(153,153,153,1);
  text-align: center;
  padding: 0;
  margin: 0;
}
.tag-nav:after{
  border: none;
  background: none;
}
.names{
  flex: 1;
  padding-right: 30rpx;
}