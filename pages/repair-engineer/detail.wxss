.step-line{
  background: #fff;
}
.step-line:first-child{
  color: rgba(30,87,158,1);
}
.dot{
  position: relative;
  z-index: 1;
  width: 40rpx;
  height: 40rpx;
  background: #fff;
  border: 1rpx solid transparent;
  border-radius: 50%;
}
.dot::after{
  content: '';
  background: #ddd;
  position: absolute;
  width: 80%;
  height: 80%;
  top: 10%;
  left: 10%;
  border-radius: 50%;
}
.step-line:first-child .dot{
  border-color: rgba(30,87,158,1);
}
.step-line:first-child .dot::after{
  background: rgba(30,87,158,1);
}
.step-line .line{
  position: relative;
}
.step-line .line:after{
  content: '';
  position: absolute;
  width: 1px;
  height: 100%;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  background: #ddd;
  z-index: 0;
}
.step-line:last-child .line:after{
  display: none;
}
.step-line .context{
  padding-left: 30rpx;
  padding-bottom: 15rpx;
  flex: 1;
}
