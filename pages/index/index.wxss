page{
  background: #f2f2f2;
}
.main {
  background: #fff;
}

.banner {
  height: 360rpx;
}

.banner-item {
  position: relative;
  margin: 0 15rpx;
}

.banner-img {
  height: 360rpx;
}

.banner-txt {
  position: absolute;
  bottom: 0;
  width: 100%;
  min-height: 30rpx;
  background: linear-gradient(rgba(0,0,0,0), rgba(0,0,0.5));
  left: 0;
  border-radius: 0 0 8rpx 8rpx;
}

.banner-txt .title {
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.entries {
  margin: 30rpx auto 0;
  padding: 15rpx 0;
}

.entry {
  width: 25%;
  display: inline-block;
  text-align: center;
  margin: 15rpx 0;
}

.nav-img {
  width: 112rpx;
  height: 112rpx;
  margin: 0 auto;
}

.nav-text {
  font-size: 20rpx;
  color: rgba(51, 51, 51, 1);
  line-height: 28rpx;
}

.title {
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
}

.title .text {
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(0, 0, 0, 1);
}
.title .more{
  font-size:24rpx;
  color:rgba(164,167,165,1);
}
.cell{
  padding: 15rpx 30rpx;
}
.thumbnail{
  width: 320rpx;
  height: 180rpx;
}
.p{
  font-size: 24rpx;
  color:rgba(153,153,153,1);
  margin-top: 5rpx;
}
.cell .title{
  font-size:28rpx;
  font-weight:500;
  color:rgba(0,0,0,1);
  line-height:40rpx;
  margin: 0;
  padding:0;
  height: 100rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}
.cell .title .mark{
  color: rgba(255, 255, 255, 1);
  background: rgba(30,87,158,1);
  font-size: 80%;
  display: inline-block;
  padding:5rpx 10rpx;
  margin-right: 5rpx;
  border-radius: 4rpx;
}
.info{
  flex:1;
  padding-left: 15rpx;
  flex-direction: column;
  justify-content: space-between;
}