page{
  background: #f2f2f2;
}
.main {
  background: #fff;
}

.banner {
  height: 360rpx;
}

.banner-item {
  position: relative;
  margin: 0 15rpx;
}

.banner-img {
  height: 360rpx;
}

.banner-txt {
  position: absolute;
  bottom: 0;
  width: 100%;
  min-height: 30rpx;
  background: linear-gradient(rgba(0,0,0,0), rgba(0,0,0.6));
  left: 0;
}

.banner-txt .title {
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.entries {
  margin: 30rpx auto 0;
  padding: 15rpx 0;
}

.entry {
  width: 25%;
  display: inline-block;
  text-align: center;
  margin: 15rpx 0;
}

.nav-img {
  width: 112rpx;
  height: 112rpx;
  margin: 0 auto;
}

.nav-text {
  font-size: 20rpx;
  color: rgba(51, 51, 51, 1);
  line-height: 28rpx;
}

.title {
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
}

.title .text {
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(0, 0, 0, 1);
}
.title .more{
  font-size:24rpx;
  color:rgba(164,167,165,1);
}
